<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<% if flash[:errors] %>
  <p><%= flash[:errors] %></p>
<% end %>

<%= @user.errors.full_messages %>

<form action="/users/<%= @user.id %>" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="hidden" name="_method" value="patch">
    <p>Update</p>
    <label for="Name">Name:</label>
    <input type="text" id="Name" name="user[name]" value="<%= @user.name %>">
    <p></p>
    <label for="Email">Email:</label>
    <input type="text" id="Email" name="user[email]" value="<%= @user.email %>">
    <p></p>
    <input type="submit" value="Update">
</form>

<a href="/users/<%= @user.id %>" data-method="delete">Delete Account</a>
