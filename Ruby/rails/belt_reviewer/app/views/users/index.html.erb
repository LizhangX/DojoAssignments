

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p>***<%= error %>***</p>
    <% end %>
<% end %>

<div class="row">
    <div class="col">
        <form action="/users" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <h1>Sign up</h1>
            <label for="First_name">First Name:</label>
            <input type="text" id="First_name" name="user[first_name]">
            <p></p>
            <label for="Last_name">Last Name:</label>
            <input type="text" id="Last_name" name="user[last_name]">
            <p></p>
            <label for="Email">Email:</label>
            <input type="text" id="Email" name="user[email]">
            <p></p>
            <label for="City">Location:</label>
            <input type="text" id="City" name="user[city]">
            <select name="user[state]" id="State">
                <option value="TX">TX</option>
                <option value="WA">WA</option>
                <option value="NY">NY</option>
            </select>
            <p></p>
            <label for="Password">Password: </label>
            <input type="password" name="user[password]" id="Password">
            <p></p>
            <label for="Password_Confirmaiton">Password Comfirmation: </label>
            <input type="password" name="user[password_confirmation]" id="Password_Confirmation">
            <p></p>
            <input type="submit" value="Join">
        </form>
    </div>
    <hr>
    <div class='col'>
        <form action="/sessions" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <h1>Log In</h1>
            <label for="Email">Email:</label>
            <input type="text" id="Email" name="email">
            <p></p>
            <label for="Password">Password:</label>
            <input type="password" name="password" id="Password">
            <p></p>
            <input type="submit" value="Log In">
        </form>
    </div>
</div>

