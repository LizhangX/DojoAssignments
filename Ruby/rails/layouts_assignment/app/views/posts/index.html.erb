<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<% content_for :div1 do %>
    <div class="container-fluid">
        <h1>All Posts</h1>
        <table class="table">
            <thead>
                <th>Title:</th>
                <th>Content:</th>
                <th>Author:</th>
            </thead>
            <tbody>
                <% @posts.each do |post| %>
                <tr>
                    <td><%= post.title %></td>
                    <td><%= post.content %></td>
                    <td><%= post.user.first_name %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>

<% content_for :div2 do %>
    <h1>New Post</h1>
    <form action="/posts" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" name="post[title]" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Content</label>
            <textarea name="post[content]" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="">Author</label>
            <select name="post[user_id]" class="form-control">
                <% @users.each do |user| %>
                <option value="<%= user.id %>"><%= user.first_name %> <%= user.last_name %></option>
                <% end %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    
    </form>

<% end %>

<% content_for :div3 do %>
    <h1>Go to Users Page</h1>
        <button class="btn btn-secondary"><a href="/">All Users</a></button>

<% end %>