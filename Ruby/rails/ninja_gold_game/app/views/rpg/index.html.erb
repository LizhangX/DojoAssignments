<div id="wrapper">
    <p>Your Gold: <span><%= session[:gold] %></span></p>
    <div class="box">
        <p>Farm</p>
        <p>(earns 10-20 golds)</p>
        <form action="rpg/farm" method='post'>
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">​
            <input type="submit" value="Find Gold!">
        </form>
    </div>
    <div class="box">
        <p>Cave</p>
        <p>(earns 5-10 golds)</p>
        <form action="rpg/cave" method='post'>
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">​
            <input type="submit" value="Find Gold!">
        </form>
    </div>
    <div class="box">
        <p>House</p>
        <p>(earns 2-5 golds)</p>
        <form action="rpg/house" method='post'>
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">​
            <input type="submit" value="Find Gold!">
        </form>
    </div>
    <div class="box">
        <p>Casino</p>
        <p>(earns/takes 0-50 golds)</p>
        <form action="rpg/casino" method='post'>
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">​
            <input type="submit" value="Find Gold!">
        </form>
    </div>
    <div id="activities">
        <p>Activities:</p>
        <% @activities.reverse.each do |item| %>
            <% if item.include?("Earned") %>
                <p id="green"><%= item %></p>
            <% else %>
                <p id="red"><%= item %></p>
            <% end %>
        <% end %>
    </div>
</div>